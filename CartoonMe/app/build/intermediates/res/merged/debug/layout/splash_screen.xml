<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffba00" >

    

    <ImageView
        android:id="@+id/imageView_splash_screen_logo"
        android:contentDescription="@string/cp_image_contentDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_logo" />

    <alburraq.cartoon.me.utils.SecretTextView
        android:id="@+id/textView_splash_screeen_fun"
        android:layout_above="@+id/imageView_splash_screen_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:text="@string/fun"
        android:textAppearance="?android:attr/textAppearanceLargeInverse" />
     <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">


        
        <TextView
	        android:id="@+id/textView_copy_right_splash"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:textSize="20sp"
	        android:textColor="#000000"
	        android:text="@string/new_copy_right" />

	    <TextView
	        android:id="@+id/textView_site_adress_splash"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textColor="#000000"
		    android:gravity="center_horizontal"
	        android:text="@string/site_adress" />
	    </LinearLayout>

</RelativeLayout>
