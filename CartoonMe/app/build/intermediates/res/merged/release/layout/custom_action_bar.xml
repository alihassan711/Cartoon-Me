<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffba00" 
    android:padding="5dp">
    <ImageButton
        android:id="@+id/custom_action_bar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/share_image"
        android:src="@drawable/share_icon" />

    <ImageButton
        android:id="@+id/custom_action_bar_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/custom_action_bar_share"
        android:background="@android:color/transparent"
        android:contentDescription="@string/save_image"
        android:layout_marginRight="7dp"
        android:src="@drawable/save_icon" />

    <ImageButton
        android:id="@+id/custom_action_bar_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
 		android:layout_toLeftOf="@+id/custom_action_bar_save"
 		android:layout_marginRight="7dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/write_something"
        android:src="@drawable/write_icon" />

    <ImageButton
        android:id="@+id/custom_action_bar_glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@+id/custom_action_bar_write"
        android:background="@android:color/transparent"
        android:contentDescription="@string/glasses"
        android:clickable="true"
        android:src="@drawable/glasses_icon" />
     <ImageButton
        android:id="@+id/custom_action_bar_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/custom_action_bar_glasses"
       
        android:contentDescription="@string/face"
        android:clickable="true"
        android:background="@drawable/face" />


    <ImageButton
        android:id="@+id/button_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/action_settings"
        android:src="@drawable/menu_bar_botton" />

    <ImageView
        android:id="@+id/imageView_ic_launcher"
        android:contentDescription="@string/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/button_drawer"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView_app_namne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView_ic_launcher"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

</RelativeLayout>
